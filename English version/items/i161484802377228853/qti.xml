            <simpleAssociableChoice identifier="jealous" fixed="false" showHide="show" matchMax="0" matchMin="0">Jealous</simpleAssociableChoice>
            <simpleAssociableChoice identifier="scared" fixed="false" showHide="show" matchMax="0" matchMin="0">Scared</simpleAssociableChoice>
